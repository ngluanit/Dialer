<resources>

    <declare-styleable name="CallLog">
        <attr name="call_log_primary_text_color" format="color" />
        <attr name="call_log_primary_background_color" format="color" />
        <attr name="call_log_secondary_text_color" format="color" />
        <attr name="call_log_secondary_background_color" format="color" />
        <attr name="call_log_header_color" format="color" />
    </declare-styleable>

    <declare-styleable name="VoicemailStatus">
        <attr name="call_log_voicemail_status_height" format="dimension" />
        <attr name="call_log_voicemail_status_background_color" format="color" />
        <attr name="call_log_voicemail_status_text_color" format="color" />
        <attr name="call_log_voicemail_status_action_text_color" format="color" />
    </declare-styleable>

    <declare-styleable name="SearchEditTextLayout" />
    <attr name="title" format="string" />
    <attr name="summary" format="string" />
    <attr name="widget" format="reference" />

    <attr name="textColor" format="enum">
        <enum name="theme" value="0" />
        <enum name="primaryOnTheme" value="1" />
        <enum name="secondaryOnTheme" value="2" />
        <enum name="tertiaryOnTheme" value="3" />
    </attr>

    <attr name="textSize" format="enum">
        <enum name="primary" value="0" />
        <enum name="secondary" value="1" />
        <enum name="tertiary" value="2" />
        <enum name="toolbar" value="3" />
        <enum name="dialog" value="4" />
        <enum name="emoji" value="5" />
    </attr>

    <declare-styleable name="QkTextView">
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="QkEditText">
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="PreferenceView">
        <attr name="title" />
        <attr name="summary" />
        <attr name="widget" />
        <attr name="icon" format="reference" />
    </declare-styleable>

    <declare-styleable name="RadioPreferenceView">
        <attr name="title" />
        <attr name="summary" />
        <attr name="widget" />
    </declare-styleable>

</resources>
